#!/usr/bin/env bash
# Sets a wallpaper

file="$1"

if [[ -z "$file" ]]; then
  echo "Usage: $0 <file.jpg>"
  exit 1
fi

if pgrep swaybg >/dev/null; then
  # sway
  cp "$file" ~/.config/wallpaper.jpg
  swaymsg output '*' background "$(pwd)/$file" fill
elif [[ -f ~/.fehbg ]]; then
  # feh on x?
  feh --bg-fill "$file"
fi
