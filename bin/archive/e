#!/usr/bin/env bash
# Editor
NVR_OPTIONS="${NVR_OPTIONS:-}"

if [[ -n "$NVIM_LISTEN_ADDRESS" ]] && [[ -z "$VSCODE_GIT_IPC_HANDLE" ]] && command -v nvr &>/dev/null; then
  if [[ "$#" == 0 ]]; then
    exec nvr $NVR_OPTIONS .
  else
    exec nvr $NVR_OPTIONS "$@"
  fi
elif command -v nvim &>/dev/null; then
  exec nvim "$@"
elif command -v vim &>/dev/null; then
  exec vim "$@"
elif command -v emacsclient &>/dev/null; then
  exec emacsclient -t -c -a '' "$@"
elif command -v nano &>/dev/null; then
  exec nano "$@"
fi
